<!DOCTYPE html>
<html>
  <head>
    <title>NoPassword</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="/">NoPassword</a>
          <% if session[:login_session] %>
            <ul class="nav pull-right">
              <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= LoginSession.find(session[:login_session]).email %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                <%= form_tag("logout") do %>
                  <button type="submit" class="btn" id="logout">Logout</button>
                <% end %>
                </li>
              </ul>
              </li>
            </ul>
          <% end %> 
        </div>
      </div>
    </div>
    <div class="container">
      <% if flash[:notice] %>
        <p class="alert alert-success"><%= flash[:notice] %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
